<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/RedColor</item>
        <item name="fontFamily">@font/open_sans_light</item>
        <item name="android:screenOrientation">portrait</item>

    </style>
    <style name="AuthTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="editText">
        <item name="android:textColorHint">@color/EditTextColor</item>
        <item name="android:textColor">@color/RedColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="authText">
        <item name="android:textColor">@color/WhiteColor</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>